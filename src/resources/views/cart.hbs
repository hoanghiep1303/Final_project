<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-8">
            <h1 class="text-uppercase text-success" style="font-family: 'Nunito', sans-serif;"><strong>Shopping
                    cart</strong></h4>
                {{#if products}}
                <div class="py-2 d-flex flex-row align-items-center pull-right">
                    <span class="mr-1">Sort by:</span>
                    <span class="mr-1 font-weight-bold">Price</span>
                    <i class="fa fa-angle-down"></i>
                </div>
                <div class="list-group">
                    {{#each products}}
                    <div class="list-group-item p-0 my-2 rounded">
                        <div
                            class="d-flex flex-row justify-content-between align-items-center p-2 bg-white px-3 rounded">
                            <div class="mr-1"><img class="rounded" src="https://i.imgur.com/XiFJkhI.jpg" width="70">
                            </div>
                            <div class="d-flex flex-column align-items-center product-details">
                                <span class="font-weight-bold">{{ this.item.name }}</span>
                                <div class="d-flex flex-row product-desc">
                                    <div class="size mr-1"><span class="text-grey">Size:</span><span
                                            class="font-weight-bold">&nbsp;M</span></div>
                                    <div class="color"><span class="text-grey">Color:</span><span
                                            class="font-weight-bold">&nbsp;Grey</span></div>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center qty">
                                <a href="#" class="text-decoration-none"><i class="fa fa-minus text-danger"></i></a>
                                <h5 class="text-grey my-2 mx-3">{{ this.qty }}</h5>
                                <a href="#" class="text-decoration-none"><i class="fa fa-plus text-success"></i></a>
                            </div>
                            <div>
                                <h5 class="text-grey my-2">${{ this.price }}</h5>
                            </div>
                            <a class="d-flex align-items-center text-decoration-none"
                                href="cart/remove/{{ this.item._id }}">
                                <i class="fa fa-trash text-danger"></i>
                                {{!-- <i class="fa fa-times text-danger" aria-hidden="true"></i> --}}
                            </a>
                        </div>
                    </div>
                    {{/each}}
                    <div class="row">
                        <div class="col-md-8 px-3 py-1">
                            <strong>Total: ${{ totalPrice }}</strong>
                        </div>
                    </div>
                </div>
                <div class="my-2 d-flex flex-row align-items-center p-2 bg-white rounded">
                    <input type="text" class="form-control border-0 gift-card" placeholder="discount code/gift card">
                    <a href="#" class="btn btn-outline-success btn-sm ml-2">
                        Apply
                    </a>
                </div>
                <a href="/checkout" class="w-100 mt-2 rounded-pill btn btn-success btn-block btn-lg ml-2 pay-button">
                    Continue to checkout
                </a>
                {{else}}
                <div class="empty">
                    <h2 class="text-dark">Oops, your cart is empty</h2>
                </div>
                <a href="/order" class="text-decoration-none profile-text d-flex flex-row align-items-center mt-4 fw-bold"
                    style="color: #198754;">
                    <i class="fa fa-long-arrow-left me-2"></i>
                    Go to shopping
                </a>
                {{/if}}
        </div>
    </div>
</div>